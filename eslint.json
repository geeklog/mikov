{
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true
  },
  "parser": "eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-console": [0],
    "no-extra-boolean-cast": [0],
    "no-mixed-spaces-and-tabs": [0],
    "no-redeclare": [0],
    "no-empty": [0],
    "no-unused-vars": [0, { "vars": "local", "args": "none" }],
    "no-extra-semi": [0],
    "comma-dangle": [1],
    "no-constant-condition": [1]
  }
}
